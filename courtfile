    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // PDF files paths
            const pdfFiles = {
                "GRAIN MANAGEMENT all_ 2.pdf": "/Users/infiniteintelligence/Downloads/EXPERTISE/GRAIN MANAGEMENT all_ 2.pdf",
                "GRAIN MANAGEMENT CSV_.pdf": "/Users/infiniteintelligence/Downloads/EXPERTISE/GRAIN MANAGEMENT CSV_.pdf",
                "mail.google.com-KO4CL056 URGENT ATTENTION Disabled tenant facing unlawful forced repossession.pdf": "/Users/infiniteintelligence/Downloads/Conspiracy/mail.google.com-KO4CL056 URGENT ATTENTION Disabled tenant facing unlawful forced repossession.pdf"
            };
            
            // Set initial PDF
            const pdfViewer = document.getElementById('pdfViewer');
            pdfViewer.src = pdfFiles["GRAIN MANAGEMENT all_ 2.pdf"];
            
            // Handle citation clicks
            document.querySelectorAll('.citation').forEach(citation => {
                citation.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const pdfName = this.getAttribute('data-pdf');
                    const pageNum = this.getAttribute('data-page');
                    
                    // Load the PDF and navigate to the specific page
                    if (pdfFiles[pdfName]) {
                        pdfViewer.src = pdfFiles[pdfName] + '#page=' + pageNum;
                    }
                    
                    // Highlight the corresponding reference
                    const refNumber = this.textContent.replace('[', '').replace(']', '');
                    const refElement = document.querySelector(`.reference-number:contains('[${refNumber}]')`).parentElement;
                    
                    if (refElement) {
                        refElement.style.backgroundColor = '#fff9c4';
                        setTimeout(() => {
                            refElement.style.backgroundColor = '';
                        }, 3000);
                        
                        // Scroll to the reference
                        refElement.scrollIntoView({ behavior: 'smooth' });
                    }
                });
            });
            
            // Custom contains selector for reference highlighting
            jQuery.expr[':'].contains = function(a, i, m) {
                return jQuery(a).text().toUpperCase().indexOf(m[3].toUpperCase()) >= 0;
            };
        });
    </script>
    
    <!-- Include jQuery for the custom selector -->
